{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["esnext","dom"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true, 
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "interfaces": ["src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@dataSource": ["src/data-source"],
      "@models/*": ["src/models/*"],
      "@models": ["src/models"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}
